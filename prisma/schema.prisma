generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String @id @default(uuid())
  
  fullName  String
  email     String

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  categories   Category[]
  transactions Transaction[]
  settings     UserSettings?

  monthHistory  MonthHistory[]
  yearHistory   YearHistory[]

  @@unique([id, email])
}

model UserSettings {
  currency  String 
  userId    String @id

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Category {
  id        String   @id @default(uuid())
  
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  name      String
  type      String   @default("income")
  icon      String

  userId    String
  user          User @relation(fields: [userId], references: [id], onDelete: Cascade)

  transactions Transaction[]

  @@unique([name, userId, type])
}

model Transaction {
  id            String   @id @default(uuid())

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  amount        Float      
  description   String
  date          DateTime
  type          String  @default("income")

  categoryIcon  String

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)
}

model MonthHistory {
  day           Int
  month         Int      
  year          Int

  income        Float
  expanse       Float

  userId        String
  user    User @relation(fields: [userId], references: [id], onDelete: Cascade)


  @@id([day, month, year, userId])
}

model YearHistory {
  userId         String
  user    User @relation(fields: [userId], references: [id], onDelete: Cascade)

  month         Int      
  year          Int

  income        Float
  expanse       Float

  @@id([month, year, userId])
}
