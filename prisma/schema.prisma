generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model UserSettings {
  currency  String 
  userId    String @id

}

model Category {
  createdAt DateTime @default(now())
  name      String
  type      String   @default("income")
  icon      String
  userId    String

  @@unique([name, userId, type])
}

model Transaction {
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  amount        Float      
  description   String
  date          DateTime
  userId        String
  type          String @default("income")

  category      String
  categoryIcon  String
}

model MonthHistory {
  day           Int
  month         Int      
  year          Int

  income        Float
  expanse       Float

  userId        String

  @@id([day, month, year, userId])
}

model YearHistory {
  userId        String

  month         Int      
  year          Int

  income        Float
  expanse       Float

  @@id([month, year, userId])
}
